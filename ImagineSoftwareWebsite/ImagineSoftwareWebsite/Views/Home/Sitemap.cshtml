@model SitemapViewModel
@{
    ViewData["Title"] = "Mappa del sito";
}

<h1>Mappa del sito</h1>

<section class="common-section sitemap-section">
    @foreach (var section in Model.Routes)
    {
        <ul class="sitemap-group">
            @foreach (var page in section.Value)
            {
                <li>
                    <a class="common-link @if (page.IsIndexPage) { <text>sitemap-group-title</text> }"
                       title="Visita la pagina @(page.Name)"
                       alt="Un link alla pagina @(page.Name)"
                       href="@(page.Url)">@(page.Name)</a>
                </li>
            }
        </ul>
    }
</section>
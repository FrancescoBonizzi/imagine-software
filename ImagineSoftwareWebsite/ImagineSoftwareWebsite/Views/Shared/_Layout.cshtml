<!DOCTYPE html>

<html lang="it">

<head>

    <meta charset="utf-8" />

    <!-- MAKE IT RESPONSIVE, YEAH! -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO -->
    <title>@ViewData["Title"] - Imagine Software</title>

    <!-- STYLESHEETS -->
    <link href="~/css/global.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/header.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/site.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/buttons.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/icons-generated.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/icons.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/loader.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/responsive.css" asp-append-version="true" rel="stylesheet" />

    <noscript>
        <style>
            /* Se javascript è disabilitato mostro un warning */
            .javascript-disabled-message {
                display: block;
            }
        </style>
    </noscript>

</head>

<body>

    <h3 class="javascript-disabled-message">Attenzione, Javascript è disabilitato! Il sito funziona meglio se è attivo!</h3>

    <header>

        <div class="header-content">
            <h2 class="header-title"><a asp-controller="Home" asp-action="Index">Imagine Software</a></h2>
        </div>

    </header>

    <nav>
        <input type="checkbox" id="overlay-menu-input" />
        <label for="overlay-menu-input" id="overlay-menu-button"><span></span></label>
        <div id="overlay-menu">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">@Definitions.HOME_PAGE_CONTROLLER_NAME</a></li>
                <li><a asp-controller="Home" asp-action="Services">@Definitions.SERVICES_PAGE_CONTROLLER_NAME</a></li>
                <li><a asp-controller="Customers" asp-action="Index">@Definitions.CUSTOMERS_PAGE_CONTROLLER_NAME</a></li>
                <li><a asp-controller="TinyProjects" asp-action="Index">@Definitions.TINY_PROJECTS_PAGE_CONTROLLER_NAME</a></li>
                <li><a asp-controller="Home" asp-action="Francesco">@Definitions.FRANCESCO_PAGE_CONTROLLER_NAME</a></li>
                <li><a asp-controller="Home" asp-action="Contacts">@Definitions.CONTACT_PAGE_CONTROLLER_NAME</a></li>
            </ul>
        </div>
    </nav>

    <button class="back-to-top-button" onclick="backToTop();" id="btnBackToTop" style="display: none;" title="Torna in alto"><i class="icon-up-circled"></i></button>

    <main class="@ViewData["Main-Custom-Class"]">
        @RenderBody()
    </main>

    <footer>

        <section class="bottom-menu-section">

            <h2 class="bottom-menu-title">Imagine Software</h2>

            <div>
                <h4 class="footer-section-title">LINK</h4>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">@Definitions.HOME_PAGE_CONTROLLER_NAME</a></li>
                    <li><a asp-controller="Home" asp-action="Services">@Definitions.SERVICES_PAGE_CONTROLLER_NAME</a></li>
                    <li><a asp-controller="Customers" asp-action="Index">@Definitions.CUSTOMERS_PAGE_CONTROLLER_NAME</a></li>
                    <li><a asp-controller="TinyProjects" asp-action="Index">@Definitions.TINY_PROJECTS_PAGE_CONTROLLER_NAME</a></li>
                    <li><a asp-controller="Home" asp-action="Francesco">@Definitions.FRANCESCO_PAGE_CONTROLLER_NAME</a></li>
                </ul>
            </div>

            <div>
                <h4 class="footer-section-title">CONTATTI</h4>
                <ul>

                    <li>
                        <i class="icon-email footer-icon"></i>
                        <a href="mailto:fbonizzi@imaginesoftware.it" alt="Indirizzo email per contattare Francesco Bonizzi di Imagine Software" title="Scrivimi due righe per email!">fbonizzi@imaginesoftware.it</a>
                    </li>
                    <li>
                        <i class="icon-telegram footer-icon"></i>
                        <a href="https://telegram.me/fbonizzi" alt="Link per inviare un messaggio su Telegram a Francesco Bonizzi di Imagine Software" title="Scrivimi due righe tramite Telegram">@@fbonizzi</a>
                    </li>

                    <li><a asp-controller="Home" asp-action="Contacts" class="little-contact-button-footer" title="Scrivimi direttamente dal sito!"><i class="icon-email"></i> Modulo di contatto</a></li>

                </ul>
            </div>

        </section>

        <section class="last-footer-section">
            <p>
                <a asp-controller="Home" asp-action="PrivacyPolicy" title="Leggi l'informativa sulla privacy">@Definitions.PRIVACY_PAGE_CONTROLLER_NAME</a>
                <span class="pipe">|</span>
                <a asp-controller="Home" asp-action="CookiePolicy" title="Leggi l'informativa sui cookie">@Definitions.COOKIE_PAGE_CONTROLLER_NAME</a>
                <span class="pipe">|</span>
                <a asp-controller="Home" asp-action="Sitemap" title="Visita la mappa del sito per avere maggior chiarezza dei contenuti">@Definitions.SITEMAP_PAGE_CONTROLLER_NAME</a>
            </p>
            <p>&copy; 2021, Imagine Software di Francesco Bonizzi. Partita IVA: TODO</p>
        </section>

    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        initializeBackToTopButton();
    </script>
    @RenderSection("Scripts", required: false)

</body>

</html>

@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment hostingEnv

<!DOCTYPE html>

<html lang="it" dir="ltr">

<head>

    <meta charset="utf-8" />

    <!-- MAKE IT RESPONSIVE, YEAH! -->
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />

    <!-- FAVICON -->
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicons/favicon-16x16.png">
    <link rel="mask-icon" href="/images/favicons/safari-pinned-tab.svg" color="#313d55">
    <link rel="shortcut icon" href="/images/favicons/favicon.ico">
    <meta name="theme-color" content="#313d55">

    <!-- SEO -->
    <title>@ViewData["Title"] - Imagine Software</title>
    <meta name="description" content="@ViewData["MetaDescription"]" />
    <meta property="og:type" content="website">
    <meta property="og:title" content="@ViewData["Title"] - Imagine Software" />
    <meta property="og:description" content="@ViewData["MetaDescription"]" />
    <meta property="og:site_name" content="Imagine Software" />
    <meta property="og:locale" content="it_IT">
    <meta property="og:image" content="https://www.imaginesoftware.it/images/logos/logo-imagine-software-no-text.jpg">
    <meta name="author" content="Francesco Bonizzi" />
    <link rel="canonical" href="https://www.imaginesoftware.it/@ViewContext.ActionDescriptor.AttributeRouteInfo.Template" />

    <!-- STRUCTURED DATA -->
    @RenderSection("StructuredData", required: false)

    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700;900&display=swap" rel="stylesheet">

    <!-- STYLESHEETS with async loading -->
    <link href="~/css/bundle.min.css" rel="stylesheet" asp-append-version="true" media="print" onload="this.media='all'" />

    <noscript>
        <style>
            /* Se javascript è disabilitato mostro un warning */
            .javascript-disabled-message {
                display: block;
            }
        </style>
    </noscript>

</head>

<body>

    <h3 class="javascript-disabled-message">Attenzione, Javascript è disabilitato! Il sito funziona meglio se è attivo!</h3>

    <header>

        <div class="header-content">
            <a asp-controller="Home" asp-action="Index"><img height="78" src="~/images/logos/logo-imagine-software.png" asp-append-version="true" alt="Il logo di Imagine Software" title="Imagine Software" /></a>
        </div>

    </header>

    <nav>
        <input type="checkbox" id="overlay-menu-input" />
        <label for="overlay-menu-input" id="overlay-menu-button"><em id="overlay-menu-text"></em><span></span></label>
        <div id="overlay-menu">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">@Definitions.HOME_PAGE_CONTROLLER_NAME</a></li>
                <li><a asp-controller="Home" asp-action="Services">@Definitions.SERVICES_PAGE_CONTROLLER_NAME</a></li>
                <li><a asp-controller="Applications" asp-action="Index">@Definitions.APPLICATIONS_PAGE_CONTROLLER_NAME</a></li>
                <li><a asp-controller="OpenSourceProjects" asp-action="Index">@Definitions.OPEN_SOURCE_PROJECTS_PAGE_CONTROLLER_NAME</a></li>
                <li><a asp-controller="Home" asp-action="Francesco">@Definitions.FRANCESCO_PAGE_CONTROLLER_NAME</a></li>
                <li><a asp-controller="Home" asp-action="Contacts">@Definitions.CONTACT_PAGE_CONTROLLER_NAME</a></li>
            </ul>
        </div>
    </nav>

    <button class="back-to-top-button" onclick="backToTop();" id="btnBackToTop" title="Torna in alto"><i class="icon-up"></i></button>

    <main class="@ViewData["Main-Custom-Class"]">
        @RenderBody()
    </main>

    <footer>

        <div class="bottom-menu-section">

            <img height="120" src="~/images/logos/logo-imagine-software-footer.png" asp-append-version="true" alt="Il logo di Imagine Software" title="Imagine Software" />

            <div>
                <ul>
                    <li class="footer-section-title">Link</li>
                    <li><a asp-controller="Home" asp-action="Index">@Definitions.HOME_PAGE_CONTROLLER_NAME</a></li>
                    <li><a asp-controller="Home" asp-action="Services">@Definitions.SERVICES_PAGE_CONTROLLER_NAME</a></li>
                    <li><a asp-controller="Applications" asp-action="Index">@Definitions.APPLICATIONS_PAGE_CONTROLLER_NAME</a></li>
                    <li><a asp-controller="OpenSourceProjects" asp-action="Index">@Definitions.OPEN_SOURCE_PROJECTS_PAGE_CONTROLLER_NAME</a></li>
                    <li><a asp-controller="Home" asp-action="Francesco">@Definitions.FRANCESCO_PAGE_CONTROLLER_NAME</a></li>
                </ul>
            </div>

            <div>

                <ul>
                    <li class="footer-section-title">Contatti</li>
                    <li>
                        <i class="icon-email"></i>
                        <span title="Scrivimi due righe per email!"><a href="mailto:@Definitions.Email">@Definitions.Email</a></span>
                    </li>

                    <li>
                        <i class="icon-telegram" title="L'icona dell'App di messaggistica Telegram"></i>
                        <a href="https://telegram.me/fbonizzi" title="Scrivimi due righe tramite Telegram">@@fbonizzi</a>
                    </li>

                    <li>
                        <i class="icon-linkedin icon-small-for-footer" title="L'icona del social network LinkedIN"></i>
                        <a target="_blank" rel="noopener" href="https://www.linkedin.com/in/fbonizzi/" title="Visita il mio profilo LinkedIn">LinkedIn</a>
                    </li>

                    <li>
                        <i class="icon-github icon-small-for-footer" title="L'icona di GitHub"></i>
                        <a target="_blank" rel="noopener" href="https://github.com/FrancescoBonizzi" title="Visita il mio profilo GitHub">GitHub</a>
                    </li>

                    <li class="footer-link-contact">
                        <i class="icon-email"></i>
                        <a asp-controller="Home" asp-action="Contacts" title="Scrivimi direttamente dal sito!">Modulo di contatto</a>
                    </li>

                </ul>
            </div>

        </div>

        <div class="last-footer-section">
            <p>
                <a asp-controller="Home" asp-action="PrivacyPolicy" title="Leggi l'informativa sulla privacy">@Definitions.PRIVACY_PAGE_CONTROLLER_NAME</a>
                <span class="pipe">|</span>
                <a asp-controller="Home" asp-action="Sitemap" title="Visita la mappa del sito per avere maggior chiarezza dei contenuti">@Definitions.SITEMAP_PAGE_CONTROLLER_NAME</a>
            </p>
            <p>&copy; 2021, Imagine Software di Bonizzi Francesco. Partita IVA: @Definitions.PARTITA_IVA</p>
        </div>

    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            initializeBackToTopButton();
            initializeImagesAnimations();
        });
    </script>
    @RenderSection("Scripts", required: false)

</body>

</html>

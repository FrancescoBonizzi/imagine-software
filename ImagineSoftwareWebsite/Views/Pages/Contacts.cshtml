<partial name="_OneLevelBreadcrumbs" model="new { ThisPageRouteName = Model.Title[Model.CurrentLocalizationCode] }" />

<section>

    @Html.Raw(@Model.Body[Model.CurrentLocalizationCode])

    <a href="https://admin.imaginesoftware.it/api/assets/imagine-software-website/b990375a-3129-44af-ae9a-24b908b61a7a/francesco-bonizzi-vcard.vcf" class="action-button download-my-vcard">Scarica il mio contatto sul telefono</a>

    <div class="quick-contacts">
        <ul>
